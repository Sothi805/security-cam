NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Camera Configuration (edit these for your setup)
CAMERA_IDS=101,102,103,104,105,106
RTSP_USER=admin
RTSP_PASS=your_production_password
RTSP_HOST=192.168.0.105
RTSP_PORT=554

# Stream Settings
FPS=12
RETENTION_DAYS_DEV=1
RETENTION_DAYS=30

# FFmpeg Configuration (update path for your system)
FFMPEG_PATH=/usr/bin/ffmpeg

# Quality Settings
LOW_QUALITY_WIDTH=854
LOW_QUALITY_HEIGHT=480
LOW_QUALITY_BITRATE=1000k

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/cctv-streaming

# Production Settings
AUTO_RESTART=true
DEBUG_MODE=false
STREAM_TIMEOUT=60000

